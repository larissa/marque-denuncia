<%= form_for @comment, :html => { :class => "form-horizontal comment" } do |f| %>

    <% if @comment.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @comment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <%= f.hidden_field :incident_id %>
  <%= f.hidden_field :user_id %>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, {:rows => 7, :class => 'text'} %>
    </div>
    <%= error_span(@comment[:description]) %>
  </div>
  <div class="control-group">
    <%= f.label :anonymous, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :anonymous, {:class => 'checkbox'}, "true", "false" %>
    </div>
    <%= error_span(@comment[:anonymous]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
<% end %>
