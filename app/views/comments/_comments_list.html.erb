<h3>Comments</h3>
<% @comments.each do |comment| %>
  <div>
    <strong><%= comment.user.name %></strong>
    <br />
    <em class='date'><%= comment.created_at %></em>
    <br />
    <p><%= comment.description %></p>
    <% if current_user == comment.user && current_user.admin?  %>
      <p>
        <%= link_to 'Edit', edit_comment_path(comment), :class => 'btn btn-default btn-xs' %>
        <%= link_to 'Delete', comment_path(comment), method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger btn-xs' %>
      </p>
    <% end %>
  </div>
<% end %>
